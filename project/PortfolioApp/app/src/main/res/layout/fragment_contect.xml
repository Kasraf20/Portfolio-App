<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.FragmentContect">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="16dp"
                android:src="@drawable/icon_phone"
                android:id="@+id/phone_img"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/phone_txt"
                android:layout_marginStart="16dp"
                android:layout_toRightOf="@+id/phone_img"
                android:text="123456789"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="16dp"
                android:src="@drawable/icon_email"
                android:id="@+id/email_img"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/email_txt"
                android:layout_marginStart="16dp"
                android:layout_toRightOf="@+id/email_img"
                android:text="test@gmail.com"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="16dp"
                android:src="@drawable/icon_place"
                android:id="@+id/location_img"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/location_txt"
                android:layout_marginStart="16dp"
                android:layout_toRightOf="@+id/location_img"
                android:text="Delhi,India"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp" />

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>